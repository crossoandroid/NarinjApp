<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuIconRootFrame"
    android:layout_width="@dimen/menu_icon_root_layout"
    android:layout_height="@dimen/menu_icon_root_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@color/colorPrimary">
    <ImageView
        android:layout_width="@dimen/menu_icon_image"
        android:layout_height="@dimen/menu_icon_image"
        android:layout_gravity="center"
        android:src="@drawable/ic_shopping_cart_white_24px"/>
    <FrameLayout
        android:id="@+id/menuIconRedCircleFrame"
        android:layout_width="@dimen/menu_icon_circle_layout"
        android:layout_height="@dimen/menu_icon_circle_layout"
        android:layout_gravity="top|end"
        android:background="@drawable/circleshape"
        tools:visibility="visible">
        <TextView
            android:id="@+id/menuIconRedCircleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/menu_icon_circle_text_size"
            android:textColor="@color/primary_light"
            android:text="0"/>

    </FrameLayout>

</FrameLayout>