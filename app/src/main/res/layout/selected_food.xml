<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foodImageDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/ic_launcher"/>



    <Button
        android:id="@+id/btn_minus"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/foodImageDialog"
        android:background="@drawable/minus_btn" />

    <Button
        android:id="@+id/btn_display"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_minus"
        android:background="@drawable/number_bg"
        android:layout_below="@id/foodImageDialog"
        android:textColor="#009B7C" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn_display"
        android:layout_below="@id/foodImageDialog"
        android:background="@drawable/plus_btn" />


    <TextView
        android:id="@+id/itemPriceDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_plus"
        android:layout_below="@id/foodImageDialog"

        android:layout_marginRight="@dimen/dialog_margins"
        android:text="Price"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/item_priceTV_size"/>

    <TextView
        android:id="@+id/chefName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/itemPriceDialog"
        android:text="Cook's Name"
        android:layout_marginRight="@dimen/dialog_margins"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/descDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chefName"
        android:layout_marginLeft="@dimen/dialog_margins"
        android:text="Description"
        android:textColor="@color/primary_text"/>
    </RelativeLayout>

