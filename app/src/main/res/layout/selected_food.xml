<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/foodImageDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/descDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodImageDialog"
        android:layout_marginLeft="@dimen/dialog_margins"
        android:text="Description"
        android:textColor="@color/primary_text"/>


    <TextView
        android:id="@+id/itemPriceDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descDialog"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dialog_margins"
        android:text="Price"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/item_priceTV_size"/>

    <TextView
        android:id="@+id/cookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/itemPriceDialog"
        android:text="Cook's Name"
        android:layout_marginRight="@dimen/dialog_margins"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cookName"
        android:text="-   "
        android:textColor="@color/primary_text"
        android:textSize="@dimen/dialog_count"/>

    <TextView
        android:id="@+id/countDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cookName"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:text="1"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/dialog_count"/>

    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cookName"
        android:layout_toRightOf="@id/countDialog"
        android:text="   +"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/dialog_count"/>
</RelativeLayout>
