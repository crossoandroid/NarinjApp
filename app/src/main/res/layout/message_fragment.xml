<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <EditText
        android:id="@+id/previewMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_style"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="Ձեր պատվերն ընդունված է"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/onTheWayMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:layout_marginRight="10dp"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="35dp"
        android:text="Ձեր պատվերը ճանապարհին է"
        android:textSize="20dp"
        android:layout_below="@+id/previewMessageText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/finishedMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:layout_marginRight="10dp"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="35dp"
        android:text="Ձեր պատվերը տեղում է"
        android:textSize="20dp"
        android:layout_below="@+id/onTheWayMessageText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>