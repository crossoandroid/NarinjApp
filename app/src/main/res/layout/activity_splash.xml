<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.orange_team.narinjapp.activities.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/logo"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/splash_spacing"
        android:layout_marginLeft="@dimen/splash_fab_margin"
        android:layout_marginRight="@dimen/splash_fab_margin"
        android:adjustViewBounds="true"
        android:id="@+id/logo_imageView"
        android:contentDescription="@string/logo_image_description"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_domain_word"
        android:columnCount="9">

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/capital_n"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/a"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_domain_word"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/r"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/i"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/n"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/j"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/dot"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/a"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="@dimen/logo_letters_size"
            android:layout_height="@dimen/logo_letters_size"
            app:srcCompat="@drawable/m"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>
